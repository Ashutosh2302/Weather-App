<!DOCTYPE html>
<html lang="en">
<head>
    
    
    {{>links}}
     
</head>
<body>
    
    {{>navbar}}

    <!-- main header-->
    <div class="container-fluid main_header">
        <div class='row'>
            <div class="col-md-10 col-12 mx-auto">

               <div class="main_content">
                   <form class="temp_form">
                       <input type="text" id="cityname" placeholder="Enter city" autocomplete="off">
                       <input type="submit" value="search" id="searchbtn">
                   </form>
               </div>

                <div class="tempInfo">
                    <div class="top_layer">
                        <p id="day">fri</p>
                        <p id="today_date">27 Dec</p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name"></p>
                        <div class="middle_layer data_hide">
                            <p id="temprature"><span id="temp_value">0</span><sup>o</sup>C</p>
                            <p id="symbol"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    
    <!--footer-->
    {{>footer}}

    <script src="js/main.js"></script>
    <script>
        
        const getCurrentDay = () =>{
            let day=document.getElementById('day');
            let weekday = new Array(7);
            weekday[0]="Sunday";
            weekday[1]="Monday";
            weekday[2]="Tuesday";
            weekday[3]="Wednesday";
            weekday[4]="Thursday";
            weekday[5]="Friday";
            weekday[6]="Saturday";

            let currentTime=new Date();
            d=weekday[currentTime.getDay()];
            day.innerText=d;
        };

        getCurrentDay();
        
       
    </script>

</body>
</html>